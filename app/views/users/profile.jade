extends ../shared/template
block content
  .row
    .col-xs-6
      h1= user.email
      h4= user.tagline
      h2 Phone
      h4= user.phone
      h2 Twitter
      h4: a(href='http://www.twitter.com/#{user.twitter}', target='_blank') #{user.twitter}
      h2 Facebook
      h4: a(href='http://#{user.facebook}', target='_blank') #{user.facebook}
      h2 Visibility
      h4= user.isVisible ? 'Public' : 'Private'
      a.btn.btn-primary(href='/profile/edit') Edit Profile
    .col-xs-6
      img#profilepic.img-circle(src=user.photo)
block scripts

