extends ../shared/template
block content
  .row
    .col-xs-6
      h2 Inbox
      table.table
        thead
          th From
          th Date
          th Message
        tbody
          if messages.length > 0
            each message in messages
              - var color = message.isRead ? 'white' : 'Tomato'
                tr(style="background-color:#{color}")
                  td: a(href='/users/#{message.from}')= message.from
                  td= moment(message.date).format('LL')
                  td: a(href='/inbox/#{message._id}')=message.body.slice(0, 10)+'...'

